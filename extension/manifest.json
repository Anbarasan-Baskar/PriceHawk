{
    "manifest_version": 3,
    "name": "PriceHawk - Intelligent Shopping Assistant",
    "version": "1.0",
    "description": "Track prices, get AI predictions, and find the best deals on Amazon and Flipkart.",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "http://127.0.0.1:8080/*",
        "https://www.amazon.in/*",
        "https://www.flipkart.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.in/*",
                "https://www.flipkart.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}
